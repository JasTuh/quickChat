<body style="background-color:#e74c3c;">
    <div>
         <h1 class="mainTitle">Quick Chat!</h1>

      <div class="newConversationContainer"></div>
      <div class="formThing" style="position:absolute;">
         <h1 class="titleForm">New Conversation</h1>
         

         
         <form method="POST" id="addFriendThing" action="/addconvo" style="position:absolute;" class="convoForm">
           <label><%=flash[:message]if flash[:message]%><input type="text" name="title" placeholder="Title"></label>
            <select name="username" form="addFriendThing"placeholder="Username" style="width:120px;border-radius:10px;">
                  <option value="">Select A User!</option>
              <% User.all.each do |t| %>
                <% if t.id != session[:user_id] %> 
                  <option value="<%=t.username%>"><%=t.username%></option>
                <% end %>
              <%end%>
            </select>
            <br><br>
           <input type="submit" class="submitBut">
         </form>
         
      </div>  
    </div>
  </body>