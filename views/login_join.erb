
<body style="background-color:#e74c3c;">
  <div>
       <h1 class="mainTitleReg">Quick Chat!</h1>
       <h2 class="subTitle"> First log in then you can join the conversation!</h2>

    <div class="loginformContainer"></div>
    <div class="loginFormThing" style="position:absolute;">
       <h1 class="titleLoginForm">Login</h1>
       <%=flash[:message]if flash[:message]%>
       <form id="form" method="POST" action="/login-validation-join" class="loginForm">
         <input type="text" name="username" placeholder="Username">
         <input type="password" name="password" placeholder="Password"><br><br>
         <input type="submit" class="submitBut">
       </form>
       <a href="/register-join">Make an account! </a>
    </div>
  </div>
</body>
