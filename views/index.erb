
  <body style="background-color:#3498db;">
      <%=flash[:message]if flash[:message]%>
     <h1 class="mainTitle"><b>Quick Chat!</b></h1>
     <div class="spacer"></div>
     <div class="rest">
       <h3 class="listTitle">Conversations: </h3>
       <div class="conversationsList">
         <% for c in @conversations.reverse %>
            <% if c != nil %>
              <a class="listLink" href="/conversation/<%=c.conversation_id%>">
                <%=Conversation.find(c.conversation_id).title%> <a href="/delete/<%=c.conversation_id%>">Delete</a>
                <br>
              </a>
            <%end%>
         <%end %>
        </div>
     </div>
     <script type="text/javascript">
        $(".one").css("color", "#1abc9c")
     </script>
  </body>

